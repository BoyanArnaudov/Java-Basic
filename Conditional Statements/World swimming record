package ConditionalStatements.Exercise;

import java.util.Scanner;

public class WorldSwimmingRecord {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        double record = Double.parseDouble(input.nextLine());
        double distance = Double.parseDouble(input.nextLine());
        double speed = Double.parseDouble(input.nextLine());

        double resistance = Math.floor(distance/15);
        double slowDown = resistance * 12.5;

        double ivanTime = distance * speed + slowDown;

        if (ivanTime < record) {
            System.out.printf("Yes, he succeeded! The new world record is %.2f seconds.", ivanTime);
        } else
            System.out.printf("No, he failed! He was %.2f seconds slower.", ivanTime - record );

    }
}
