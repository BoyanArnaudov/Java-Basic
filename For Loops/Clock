package ForLoop.Additional;

public class Clock {
    public static void main(String[] args) {
        int hour = 0, minute = 0;
        for (int i = 0; i <= 23; i++){
            for (int j = 0; j <= 59; j++) {
                System.out.printf("%d : %d%n", hour, minute);
                minute += 1;
                if (minute >= 60){
                    minute = 0;
                }
            }
            hour += 1;
        }
    }
}
