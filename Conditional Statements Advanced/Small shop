package ConditionStatementsAdvanced;

import java.util.Scanner;

public class SmallShop {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        String product = input.nextLine();
        String town = input.nextLine();
        double quantity = Double.parseDouble(input.nextLine());

        if (town.equals("Sofia")){
            coffee = 0.5;
            water = 0.8;
            beer = 1.2;
            sweets = 1.45;
            peanuts = 1.6;
            switch (product){
                case "coffee":
                    total = coffee * quantity;
                    System.out.println(total);
                    break;
                case "water":
                    total = water * quantity;
                    System.out.println(total);
                    break;
                case "beer":
                    total = beer * quantity;
                    System.out.println(total);
                    break;
                case "sweets":
                    total = sweets * quantity;
                    System.out.println(total);
                    break;
                case "peanuts":
                    total = peanuts * quantity;
                    System.out.println(total);
                    break;
            }
        }
        if (town.equals("Plovdiv")){
            coffee = 0.4;
            water = 0.7;
            beer = 1.15;
            sweets = 1.3;
            peanuts = 1.5;
            switch (product){
                case "coffee":
                    total = coffee * quantity;
                    System.out.println(total);
                    break;
                case "water":
                    total = water * quantity;
                    System.out.println(total);
                    break;
                case "beer":
                    total = beer * quantity;
                    System.out.println(total);
                    break;
                case "sweets":
                    total = sweets * quantity;
                    System.out.println(total);
                    break;
                case "peanuts":
                    total = peanuts * quantity;
                    System.out.println(total);
                    break;
            }
        }
        if (town.equals("Varna")){
            coffee = 0.45;
            water = 0.7;
            beer = 1.1;
            sweets = 1.35;
            peanuts = 1.55;
            switch (product){
                case "coffee":
                    total = coffee * quantity;
                    System.out.println(total);
                    break;
                case "water":
                    total = water * quantity;
                    System.out.println(total);
                    break;
                case "beer":
                    total = beer * quantity;
                    System.out.println(total);
                    break;
                case "sweets":
                    total = sweets * quantity;
                    System.out.println(total);
                    break;
                case "peanuts":
                    total = peanuts * quantity;
                    System.out.println(total);
                    break;
            }
        }
    }
}
