package FirstStepInCoding.AdditionalTasks;

import java.util.Scanner;

public class CircleAreaAndPerimeter {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        double radius = Double.parseDouble(input.nextLine());

        double calculated_area = Math.PI * radius * radius;
        double calculated_parameter = Math.PI * 2 * radius;

        System.out.printf("%.2f %n", calculated_area);
        System.out.printf("%.2f", calculated_parameter);
    }
}
