package FirstStepInCoding.AdditionalTasks;

import java.util.Scanner;

public class VegetableMarket {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        double priceVegetables = Double.parseDouble(input.nextLine());
        double priceFruits = Double.parseDouble(input.nextLine());
        int totalKgVegetables = Integer.parseInt(input.nextLine());
        int totalKgFruits = Integer.parseInt(input.nextLine());

        double totalPrice = ((priceVegetables * totalKgVegetables) + (priceFruits * totalKgFruits)) / 1.94;

        System.out.printf("%.2f", totalPrice);

    }
}
